{
    "compilerOptions": {
        "target": "esnext",
        "module":"es6",
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "react",
        "sourceMap": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "plugins": [{"name": "typescript-plugin-css-modules"}]
    },
    "include": ["./src/**/*"],
}